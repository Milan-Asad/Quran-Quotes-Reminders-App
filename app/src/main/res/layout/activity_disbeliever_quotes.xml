<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".DisbelieverQuotes">

    <TextView
        android:id="@+id/disbelieverQuotesTxt"
        android:layout_width="362dp"
        android:layout_height="574dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:lineSpacingExtra="-16sp"
        android:text="No matter how tough life gets, one should never disbelieve in Allah. Want to know how bad disbelieving in Allah is? Press the button..."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/disbelieverGenerateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disbeliever quotes"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />
</androidx.constraintlayout.widget.ConstraintLayout>