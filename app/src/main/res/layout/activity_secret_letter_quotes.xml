<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".SecretLetterQuotes">

    <TextView
        android:id="@+id/secretlettersQuotesTxt"
        android:layout_width="362dp"
        android:layout_height="574dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:lineSpacingExtra="-16sp"
        android:text="There are secret letters in the Qur'an with a hidden meaning. Nobody except Allah know what they mean. If you'd like a reminder on what they are, press the button...                                                                              (NOTE: For more accurate pronounciation, please read the actual Qur'an)"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/secretGenerateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret letters"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />
</androidx.constraintlayout.widget.ConstraintLayout>